{
    "name": "softspring/platform-bundle",
    "description": "This bundle provides external platform integration features.",
    "license": "MIT",
    "require": {
        "php": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Softspring\\PlatformBundle\\": ""
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Softspring\\PlatformBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "suggest": {        
        "softspring/stripe-platform": "A bridge to integrate Stripe"
    },
    "require-dev": {
        "symfony/http-kernel": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "phpunit/phpunit": "^9.1",
        "doctrine/common": "^2.12"
    }
}
